<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- On fait ici appel aux servlets pour notre V1 -->
    <servlet>

        <servlet-name>LoginPageController</servlet-name>
        <servlet-class>se.m1.ctrl.LoginPageController</servlet-class>
        
                <init-param>
            <param-name>password</param-name>
            <param-value>admin</param-value>   
        </init-param>
        
    </servlet>
    
   <servlet>
        <servlet-name>EmployeesListPageController</servlet-name>
        <servlet-class>se.m1.ctrl.EmployeesListPageController</servlet-class>
    </servlet>
    
     
    <servlet-mapping>
        <servlet-name>EmployeesListPageController</servlet-name>
        <url-pattern>/EmployeesListPageController</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginPageController</servlet-name>
        <url-pattern>/LoginPageController</url-pattern>
    </servlet-mapping>
    
    <context-param>
            <param-name>login</param-name>
            <param-value>admin</param-value>  
    </context-param>
    
    <welcome-file-list>
        <welcome-file>
        WEB-INF\\LoginPage.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
